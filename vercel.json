{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "dest": "/api/mcp.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/mcp.py"
    }
  ],
  "functions": {
    "api/mcp.py": {
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONPATH": "src"
  }
}
